# Environment Configuration for AtlasIQ Web

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+asyncpg://atlasiq:atlasiq_password_change_me@postgres:5432/atlasiq_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=3600
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_V1_PREFIX=/api/v1
API_TITLE=AtlasIQ Benelux-DE API
API_VERSION=1.0.0
API_DESCRIPTION=Real-time macroeconomic and sectoral data platform

# =============================================================================
# CORS (Frontend Origin)
# =============================================================================
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# DATA REFRESH CONFIGURATION
# =============================================================================
# Cron expression: "minute hour day month day_of_week"
# Default: Daily at 2 AM UTC
DATA_REFRESH_SCHEDULE=0 2 * * *
DATA_REFRESH_ENABLED=true
DATA_FETCH_TIMEOUT_SECONDS=300

# =============================================================================
# EXTERNAL API CREDENTIALS (Optional)
# =============================================================================
# Leave empty to use test/mock mode

# Eurostat API
EUROSTAT_API_BASE=https://ec.europa.eu/eurostat/api/dissemination/sdmx/2.1/data
EUROSTAT_API_KEY=

# ECB Statistical Data Warehouse
ECB_API_BASE=https://sdw-wsrest.ecb.europa.eu/service/data
ECB_API_KEY=

# World Bank API
WORLD_BANK_API_BASE=https://api.worldbank.org/v2
WORLD_BANK_API_KEY=

# OECD API
OECD_API_BASE=https://stats.oecd.org/SDMX-JSON/data
OECD_API_KEY=

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
TIMEZONE=UTC

# =============================================================================
# SUPPORTED COUNTRIES & SECTORS
# =============================================================================
SUPPORTED_COUNTRIES=NL,BE,LU,DE
SUPPORTED_SECTORS=C,G,J
# C=Manufacturing, G=Retail, J=Information & Communication

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
ENABLE_CACHING=true
CACHE_DEFAULT_TTL=3600
CACHE_INDICATOR_TTL=7200
CACHE_DASHBOARD_TTL=300

# =============================================================================
# BACKGROUND JOBS
# =============================================================================
ENABLE_SCHEDULER=true
SCHEDULER_TIMEZONE=UTC
MAX_CONCURRENT_JOBS=5

# =============================================================================
# FILE STORAGE
# =============================================================================
EXPORT_DIR=./exports
MAX_EXPORT_SIZE_MB=100
EXPORT_RETENTION_DAYS=7

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_STRUCTURED_LOGGING=true
LOG_FORMAT=json

# =============================================================================
# SECURITY
# =============================================================================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=false

# =============================================================================
# EMAIL (Optional - for notifications)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@atlasiq.example.com
ENABLE_EMAIL=false

# =============================================================================
# POSTGRESQL (for docker-compose)
# =============================================================================
POSTGRES_USER=atlasiq
POSTGRES_PASSWORD=atlasiq_password_change_me
POSTGRES_DB=atlasiq_db
POSTGRES_PORT=5432

# =============================================================================
# REDIS (for docker-compose)
# =============================================================================
REDIS_PORT=6379

# =============================================================================
# WEB SERVER
# =============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=3000

# =============================================================================
# DEVELOPMENT/PRODUCTION FLAGS
# =============================================================================
# Set to 'production' for production deployment
ENVIRONMENT=development

# Reload backend on code changes (development only)
RELOAD=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_PORTFOLIO=false
FEATURE_MA_SIMULATION=false
FEATURE_ADVANCED_ANALYTICS=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Change all passwords and secrets before deploying to production
# 2. Use strong JWT_SECRET_KEY (min 32 characters)
# 3. Set DEBUG=false in production
# 4. Configure proper CORS_ORIGINS for production domain
# 5. Enable HTTPS in production
# 6. Set up proper SMTP for email notifications
# 7. Consider using environment-specific .env files (.env.prod, .env.dev)
